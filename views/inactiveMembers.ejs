<!DOCTYPE html>
<html lang="en" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <title>Inactive Members</title>
    <link rel="stylesheet" href="/frontend/styles/style.css" />
    <link rel="stylesheet" href="/frontend/styles/custom-sidebar.css" />
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: "Segoe UI", Arial, sans-serif;
        background: #f6fff8;
        min-height: 100vh;
      }
      .container {
        display: flex;
        width: 100vw;
        min-height: 100vh;
        background: linear-gradient(120deg, #e8f5e9 0%, #ffffff 100%);
      }
      .scroll-container {
        flex: 1;
        margin: 0;
        padding: 40px 30px;
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 4px 24px rgba(34, 139, 34, 0.08);
        overflow: auto;
        min-height: 100vh;
        border: none;
      }
      h1 {
        color: #218838;
        margin-bottom: 30px;
        font-size: 2.2rem;
        letter-spacing: 1px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        background: #f6fff8;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(34, 139, 34, 0.07);
      }
      th,
      td {
        padding: 14px 10px;
        text-align: center;
      }
      th {
        background: #218838;
        color: #fff;
        font-weight: 600;
        font-size: 1rem;
        border-bottom: 3px solid #145c1b;
      }
      tr:nth-child(even) {
        background: #e8f5e9;
      }
      tr:hover {
        background: #c3e6cb;
        transition: background 0.2s;
      }
      td {
        color: #222;
        font-size: 0.98rem;
      }
      @media (max-width: 900px) {
        .scroll-container {
          padding: 20px 5px;
        }
        table,
        th,
        td {
          font-size: 0.9rem;
        }
      }
      @media (max-width: 600px) {
        .container {
          flex-direction: column;
        }
        .scroll-container {
          padding: 10px 2px;
        }
        table,
        th,
        td {
          font-size: 0.8rem;
        }
      }
    </style>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="container" style="margin-top: 20px">
      <%- include('partials/sidebar') %>
      <div class="scroll-container">
        <h1>Inactive Members</h1>
        <table>
          <thead>
            <tr>
              <th>Council Code</th>
              <th>Membership Number</th>
              <th>Name</th>
              <th>Member Type</th>
              <th>Position</th>
              <th>Appointment Date (Hijri)</th>
              <th>Subscription Start Date</th>
              <th>Status</th>
              <th>Short Name</th>
              <th>National ID Number</th>
              <th>Phone Number</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(function(member) { %>
            <tr>
              <td><%= member.councilCode %></td>
              <td><%= member.membershipNumber %></td>
              <td><%= member.name %></td>
              <td><%= member.memberType %></td>
              <td><%= member.position %></td>
              <td><%= member.appointmentDateHijri %></td>
              <td>
                <%= member.subscriptionStartDate ?
                member.subscriptionStartDate.toISOString().substring(0, 10) : ''
                %>
              </td>
              <td><%= member.status %></td>
              <td><%= member.shortName %></td>
              <td><%= member.nationalIdNumber %></td>
              <td><%= member.phoneNumber %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
