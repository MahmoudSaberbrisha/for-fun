<style>
  body {
    margin: 0;
    padding: 0;
    background: #f6fff8;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  }
  .container {
    width: 98vw;
    margin: 1vw auto;
    padding: 2vw;
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(34, 139, 34, 0.08);
  }
  #activeSessionsTable {
    width: 100%;
    border-collapse: collapse;
    background: #e9fbe5;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 1px 6px rgba(34, 139, 34, 0.07);
  }
  #activeSessionsTable th,
  #activeSessionsTable td {
    padding: 1em;
    text-align: center;
    border-bottom: 1px solid #b2dfb2;
  }
  #activeSessionsTable th {
    background: #2ecc40;
    color: #fff;
    font-weight: bold;
    font-size: 1.1em;
  }
  #activeSessionsTable tr:nth-child(even) {
    background: #f6fff8;
  }
  #activeSessionsTable tr:hover {
    background: #d4f5d4;
  }
  .button.add {
    background: #2ecc40;
    color: #fff;
    border: none;
    border-radius: 6px;
    padding: 0.5em 1.2em;
    cursor: pointer;
    font-size: 1em;
    transition: background 0.2s;
  }
  .button.add:hover {
    background: #27ae60;
  }
</style>

<div class="container">
  <table id="activeSessionsTable">
    <thead>
      <tr>
        <th>رقم الجلسه</th>
        <th>تاريخ الجلسه</th>
        <th>اليوم</th>
        <th>وقت الجلسه</th>
        <th>مده الجلسه بالدقيقه</th>
        <th>مكان انعقاد الجلسه</th>
        <th>مقرر الجلسه</th>
        <th>الموضوع</th>
        <th>إضافة موضوع</th>
        <th>إضافة بند تصويت</th>
      </tr>
    </thead>
    <tbody>
      <% if (sessions && sessions.length > 0) { %> <%
      sessions.forEach(function(session) { %>
      <tr data-id="<%= session._id %>">
        <td><%= session.sessionNumber %></td>
        <td>
          <%= session.date ? session.date.toISOString().substring(0, 10) : '' %>
        </td>
        <td><%= session.day %></td>
        <td><%= session.time %></td>
        <td><%= session.duration %></td>
        <td><%= session.location %></td>
        <td><%= session.secretary %></td>
        <td><%= session.topic %></td>
        <td>
          <button
            class="button add"
            onclick="showAddTopicForm('<%= session._id %>')"
          >
            إضافة موضوع
          </button>
        </td>
        <td>
          <button
            class="button add"
            onclick="showAddVotingItemForm('<%= session._id %>')"
          >
            إضافة بند تصويت
          </button>
        </td>
      </tr>
      <% }); %> <% } %>
    </tbody>
  </table>
</div>
