<style>
    .members-container {
        max-width: 98vw;
        margin: 0 auto 30px auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.07);
        padding: 24px 18px 18px 18px;
        overflow-x: auto;
    }

    .members-toolbar {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-bottom: 18px;
        flex-wrap: wrap;
    }

    .members-toolbar button {
        background: #1976d2;
        color: #fff;
        border: none;
        padding: 8px 18px;
        border-radius: 6px;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.2s;
    }

    .members-toolbar button:hover {
        background: #125ea7;
    }

    .members-toolbar input[type="text"] {
        padding: 8px 14px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 1rem;
        min-width: 220px;
        transition: border 0.2s;
    }

    .members-toolbar input[type="text"]:focus {
        border-color: #1976d2;
        outline: none;
    }

    #membersTable {
        width: 100%;
        border-collapse: collapse;
        background: #fafbfc;
        font-size: 0.97rem;
    }

    #membersTable th,
    #membersTable td {
        padding: 8px 10px;
        border-bottom: 1px solid #e0e0e0;
        text-align: center;
        vertical-align: middle;
    }

    #membersTable th {
        background: #1976d2;
        color: #fff;
        font-weight: 600;
        position: sticky;
        top: 0;
        z-index: 2;
        white-space: nowrap;
    }

    #membersTable tr:nth-child(even) {
        background: #f3f6fa;
    }

    #membersTable tr:hover {
        background: #e3f0fc;
    }

    #membersTable img {
        max-width: 60px;
        max-height: 60px;
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        background: #fff;
    }

    #membersTable button {
        background: #43a047;
        color: #fff;
        border: none;
        padding: 5px 12px;
        border-radius: 5px;
        font-size: 0.95rem;
        margin: 0 2px;
        cursor: pointer;
        transition: background 0.2s;
    }

    #membersTable button[type="submit"]:last-child {
        background: #e53935;
    }

    #membersTable button:hover {
        opacity: 0.85;
    }

    @media (max-width: 900px) {
        .members-container {
            padding: 8px 2px;
        }

        #membersTable th,
        #membersTable td {
            padding: 5px 4px;
            font-size: 0.93rem;
        }

        .members-toolbar input[type="text"] {
            min-width: 120px;
        }
    }
</style>

<div class="members-container">
    <div class="members-toolbar">
        <button onclick="printPage()">
            <%= t('members.printButton') || 'Print' %>
        </button>
        <input type="text" id="searchInput" onkeyup="filterMembers()"
            placeholder="<%= t('members.searchPlaceholder') || 'Search members...' %>" />
    </div>
    <table id="membersTable" border="0" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th>
                    <%= t('members.councilCodeLabel') || 'Council Code' %>
                </th>
                <th>
                    <%= t('members.nameLabel') || 'Name' %>
                </th>
                <th>الجنس</th>
                <th>الجنسية</th>
                <th>اللقب</th>
                <th>الحالة الاجتماعية</th>
                <th>
                    <%= t('members.memberTypeLabel') || 'Member Type' %>
                </th>
                <th>
                    <%= t('members.positionLabel') || 'Position' %>
                </th>
                <th>جهة الإصدار</th>
                <th>تاريخ الإصدار (هجري)</th>
                <th>تاريخ الإصدار (ميلادي)</th>
                <th>تاريخ الميلاد (هجري)</th>
                <th>تاريخ الميلاد (ميلادي)</th>
                <th>العمر</th>
                <th>
                    <%= t('members.statusLabel') || 'Status' %>
                </th>
                <th>رقم جوال ثانوي</th>
                <th>المدينة</th>
                <th>الحي</th>
                <th>اسم الشارع</th>
                <th>العنوان الوطني</th>
                <th>
                    <%= t('members.nationalIdNumberLabel') || 'National ID Number' %>
                </th>
                <th>
                    <%= t('members.phoneNumberLabel') || 'Phone Number' %>
                </th>
                <th>البريد الإلكتروني</th>
                <th>الدرجة العلمية</th>
                <th>المؤهلات الأكاديمية</th>
                <th>الخبرة العملية</th>
                <th>المهنة</th>
                <th>جهة العمل</th>
                <th>عنوان العمل</th>
                <th>هاتف العمل</th>
                <th>الصورة الشخصية</th>
                <th>صورة الهوية</th>
                <th>
                    <%= t('members.actionsLabel') || 'Actions' %>
                </th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach(function(item) { %>
                <tr>
                    <td>
                        <%= item.councilCode %>
                    </td>
                    <td>
                        <%= item.name %>
                    </td>
                    <td>
                        <%= item.gender %>
                    </td>
                    <td>
                        <%= item.nationality %>
                    </td>
                    <td>
                        <%= item.title %>
                    </td>
                    <td>
                        <%= item.maritalStatus %>
                    </td>
                    <td>
                        <%= item.memberType %>
                    </td>
                    <td>
                        <%= item.position %>
                    </td>
                    <td>
                        <%= item.issuingAuthority %>
                    </td>
                    <td>
                        <%= item.issueDateHijri %>
                    </td>
                    <td>
                        <%= item.issueDateGregorian ? item.issueDateGregorian.toISOString().substring(0, 10) : '' %>
                    </td>
                    <td>
                        <%= item.birthDateHijri %>
                    </td>
                    <td>
                        <%= item.birthDateGregorian ? item.birthDateGregorian.toISOString().substring(0, 10) : '' %>
                    </td>
                    <td>
                        <%= item.age %>
                    </td>
                    <td>
                        <%= item.status %>
                    </td>
                    <td>
                        <%= item.secondaryPhoneNumber %>
                    </td>
                    <td>
                        <%= item.city %>
                    </td>
                    <td>
                        <%= item.neighborhood %>
                    </td>
                    <td>
                        <%= item.streetName %>
                    </td>
                    <td>
                        <%= item.nationalAddress %>
                    </td>
                    <td>
                        <%= item.nationalIdNumber %>
                    </td>
                    <td>
                        <%= item.phoneNumber %>
                    </td>
                    <td>
                        <%= item.email %>
                    </td>
                    <td>
                        <%= item.academicDegree %>
                    </td>
                    <td>
                        <%= item.academicQualifications %>
                    </td>
                    <td>
                        <%= item.workLifeExperience %>
                    </td>
                    <td>
                        <%= item.profession %>
                    </td>
                    <td>
                        <%= item.workEntity %>
                    </td>
                    <td>
                        <%= item.workAddress %>
                    </td>
                    <td>
                        <%= item.workPhone %>
                    </td>
                    <td>
                        <% if (item.personalPhoto) { %>
                            <img src="/uploads/<%= item.personalPhoto %>" alt="Personal Photo" />
                            <% } else { %>
                                -
                                <% } %>
                    </td>
                    <td>
                        <% if (item.idPhoto) { %>
                            <img src="/uploads/<%= item.idPhoto %>" alt="ID Photo" />
                            <% } else { %>
                                -
                                <% } %>
                    </td>
                    <td>
                        <form action="/api/members/edit/<%= item.id %>" method="GET" style="display:inline;">
                            <button type="submit">
                                <%= t('members.editButton') || 'Edit' %>
                            </button>
                        </form>
                        <form action="/api/members/<%= item.id %>" method="POST" style="display:inline;"
                            onsubmit="return confirm('Are you sure you want to delete this member?');">
                            <input type="hidden" name="_method" value="DELETE" />
                            <button type="submit">
                                <%= t('members.deleteButton') || 'Delete' %>
                            </button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>